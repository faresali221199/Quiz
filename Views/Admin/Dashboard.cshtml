@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "لوحة التحكم الاحترافية";
}

<style>
    :root {
        --primary: #2c3e50;
        --secondary: #34495e;
        --accent-blue: #3498db;
        --accent-green: #2ecc71;
        --accent-yellow: #f1c40f;
        --bg-color: #f8fafc;
        --text-main: #2d3748;
    }

    .dashboard-wrapper {
        padding: 30px;
        background-color: var(--bg-color);
        min-height: 100vh;
        font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    }

    .glass-nav {
        background: var(--primary);
        padding: 15px 30px;
        border-radius: 15px;
        color: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 40px;
        box-shadow: 0 8px 30px rgba(44, 62, 80, 0.2);
    }

    .nav-links a {
        color: #bdc3c7;
        text-decoration: none;
        margin: 0 15px;
        font-weight: 500;
        transition: 0.3s;
        padding: 8px 12px;
        border-radius: 8px;
    }

        .nav-links a:hover, .nav-links a.active {
            color: white;
            background: rgba(255,255,255,0.1);
        }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
    }

    .info-card {
        background: white;
        padding: 40px 20px;
        border-radius: 24px;
        text-align: center;
        text-decoration: none;
        color: inherit;
        display: block;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
        overflow: hidden;
        border: 1px solid #edf2f7;
        box-shadow: 0 10px 20px rgba(0,0,0,0.02);
    }

        .info-card:hover {
            transform: translateY(-12px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.08);
        }

        .info-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 6px;
        }

    .card-blue::before {
        background: var(--accent-blue);
    }

    .card-green::before {
        background: var(--accent-green);
    }

    .card-yellow::before {
        background: var(--accent-yellow);
    }

    .icon-box {
        font-size: 3.5rem;
        margin-bottom: 20px;
        display: inline-block;
        filter: drop-shadow(0 5px 10px rgba(0,0,0,0.1));
    }

    .card-title {
        color: #718096;
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .card-value {
        font-size: 3rem;
        font-weight: 800;
        color: var(--text-main);
        margin: 0;
    }

    .card-footer {
        margin-top: 20px;
        font-size: 0.9rem;
        font-weight: bold;
        opacity: 0.7;
    }

    .logout-btn {
        background: #e74c3c;
        color: white;
        padding: 10px 22px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: bold;
        box-shadow: 0 4px 15px rgba(231, 76, 60, 0.3);
        transition: 0.3s;
    }

        .logout-btn:hover {
            background: #c0392b;
            transform: scale(1.05);
        }
</style>

<div class="dashboard-wrapper">

    <nav class="glass-nav">
        <div style="display: flex; align-items: center; gap: 12px;">
            <div style="background: rgba(255,255,255,0.2); padding: 8px; border-radius: 12px;">🛡️</div>
            <span style="font-size: 1.3rem; font-weight: 700; letter-spacing: 0.5px;">نظام الإدارة الذكي</span>
        </div>

        <div class="nav-links">
            <a href="/Admin/Dashboard" class="active">🏠 الرئيسية</a>
            <a href="/Admin/Upload">📤 رفع أسئلة</a>
            <a href="/Admin/ViewData">👁️ عرض المواد</a>
        </div>

        <a href="/Admin/Logout" class="logout-btn">خروج 🚪</a>
    </nav>

    <div class="stats-grid">

        <a href="/Admin/ViewData" class="info-card card-blue">
            <div class="icon-box">📚</div>
            <h3 class="card-title">المواد الدراسية</h3>
            <p class="card-value">@ViewBag.SubjectsCount</p>
            <div class="card-footer" style="color: var(--accent-blue);">إدارة المناهج والترمات ←</div>
        </a>

        <a href="/Admin/StudentsScores" class="info-card card-green">
            <div class="icon-box">👥</div>
            <h3 class="card-title">الطلاب المسجلين</h3>
            <p class="card-value">@ViewBag.StudentsCount</p>
            <div class="card-footer" style="color: var(--accent-green);">مشاهدة بيانات الطلاب ←</div>
        </a>

        <a href="/Admin/StudentsScores" class="info-card card-yellow">
            <div class="icon-box">📊</div>
            <h3 class="card-title">نتائج الاختبارات</h3>
            <p class="card-value" style="font-size: 1.5rem; margin-top: 15px;">كشوف الدرجات</p>
            <div class="card-footer" style="color: #f39c12;">تحليل نتائج الترم الحالي ←</div>
        </a>

    </div>

    <div style="margin-top: 50px; text-align: center; color: #a0aec0; font-size: 0.9rem;">
        آخر تحديث للنظام: @DateTime.Now.ToString("yyyy-MM-dd HH:mm")
    </div>
</div>