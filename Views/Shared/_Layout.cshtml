@{
    string currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    string currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}
<!DOCTYPE html>
<html dir="rtl" lang="ar">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - نظام الاختبارات</title>

    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Cairo', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            line-height: 1.6;
        }

        .layout-container {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* الشريط العلوي */
        .navbar {
            background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
            color: white;
            padding: 0 30px;
            height: 70px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            gap: 15px;
            text-decoration: none;
            color: white;
        }

            .navbar-brand .logo {
                font-size: 1.8rem;
                background: rgba(255,255,255,0.2);
                width: 50px;
                height: 50px;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .navbar-brand h1 {
                font-size: 1.5rem;
                font-weight: 600;
            }

        .nav-menu {
            display: flex;
            list-style: none;
            gap: 5px;
        }

        .nav-item {
            position: relative;
        }

        .nav-link {
            color: white;
            text-decoration: none;
            padding: 12px 20px;
            border-radius: 6px;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .nav-link:hover {
                background: rgba(255,255,255,0.15);
                transform: translateY(-1px);
            }

            .nav-link.active {
                background: rgba(255,255,255,0.2);
                border-bottom: 3px solid white;
            }

            .nav-link.logout {
                background: rgba(231, 76, 60, 0.9);
            }

                .nav-link.logout:hover {
                    background: #c0392b;
                }

        /* المحتوى الرئيسي */
        .main-content {
            flex: 1;
            padding: 30px;
            max-width: 1400px;
            margin: 0 auto;
            width: 100%;
        }

        /* التذييل */
        .footer {
            background: #2c3e50;
            color: white;
            padding: 25px 30px;
            text-align: center;
            margin-top: auto;
        }

        .footer-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .footer p {
            margin: 5px 0;
        }

        /* التجاوب */
        @@media (max-width: 768px) {
            .navbar {
                flex-direction: column;
                height: auto;
                padding: 15px;
                gap: 15px;
            }

            .nav-menu {
                flex-wrap: wrap;
                justify-content: center;
            }

            .main-content {
                padding: 20px 15px;
            }

            .footer-content {
                flex-direction: column;
                text-align: center;
            }
        }

        /* الرسائل */
        .alert {
            padding: 15px 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            border: none;
            font-weight: 500;
        }

        .alert-success {
            background: #d4edda;
            color: #155724;
            border-left: 5px solid #28a745;
        }

        .alert-danger {
            background: #f8d7da;
            color: #721c24;
            border-left: 5px solid #dc3545;
        }
    </style>
</head>
<body>
    <div class="layout-container">
        @if (currentController == "Admin" && currentAction != "Login")
        {
            <nav class="navbar">
                <a asp-controller="Admin" asp-action="Dashboard" class="navbar-brand">
                    <div class="logo">📊</div>
                    <h1>لوحة تحكم الإدارة</h1>
                </a>

                <ul class="nav-menu">
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="Dashboard" class="nav-link @(currentAction == "Dashboard" ? "active" : "")">
                            <span>🏠</span> الرئيسية
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="Upload" class="nav-link @(currentAction == "Upload" ? "active" : "")">
                            <span>📤</span> رفع الأسئلة
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="ViewData" asp-route-type="subjects" class="nav-link @(currentAction != null && currentAction.Contains("View") ? "active" : "")">
                            <span>👁️</span> عرض البيانات
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="Logout" class="nav-link logout">
                            <span>🚪</span> تسجيل الخروج
                        </a>
                    </li>
                </ul>
            </nav>
        }

        <main class="main-content">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @Html.Raw(TempData["SuccessMessage"])
                </div>
            }

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }

            @RenderBody()
        </main>

        <footer class="footer">
            <div class="footer-content">
                <div>
                    <p>نظام الاختبارات الإلكترونية © @DateTime.Now.Year</p>
                    <p>تم التطوير بواسطة البشمندس فارس الشيخ</p>
                </div>
                <div>
                    <p>الإصدار 1.0.0</p>
                    <p>آخر تحديث: @DateTime.Now.ToString("yyyy-MM-dd")</p>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>